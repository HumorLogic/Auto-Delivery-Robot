<Page
    x:Class="Robot_Test_Tool.Scenario1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local = "using:Robot_Test_Tool"  
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <CollectionViewSource x:ConnectionId='2' x:Name="DeviceListSource"/>
    </Page.Resources>

    <Grid>
        <!--<TextBlock Text="页面一"
                            FontSize="60"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="1"
                                 Margin="30,20,20,30">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="串口号："
                                       Margin="10,15,0,10"/>
                            <ComboBox x:ConnectionId='13' x:Name="PortNameComboBox"
                                         ItemsSource="{Binding Source={StaticResource DeviceListSource}}"
                                         Width="130"
                                         Margin="0,10,10,10"
                                         SelectionChangedTrigger="Always"
                                                                                             
                                                                                         >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding InstancePortName}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>


                            </ComboBox>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="波特率："
                                       Margin="10,15,0,10"/>
                            <ComboBox x:ConnectionId='12' x:Name="BaudRateComboBox"
                                                                                            
                                        
                                        Width="130"
                                        Margin="0,10,10,10">
                                <!--<ComboBoxItem>300</ComboBoxItem>
                        <ComboBoxItem>600</ComboBoxItem>
                        <ComboBoxItem>1200</ComboBoxItem>
                        <ComboBoxItem>2400</ComboBoxItem>
                        <ComboBoxItem>4800</ComboBoxItem>
                        <ComboBoxItem IsSelected = 
                                  "True">9600</ComboBoxItem>
                        <ComboBoxItem>19200</ComboBoxItem>
                        <ComboBoxItem>38400</ComboBoxItem>
                        <ComboBoxItem>43000</ComboBoxItem>
                        <ComboBoxItem>56000</ComboBoxItem>
                        <ComboBoxItem>57600</ComboBoxItem>
                        <ComboBoxItem>115200</ComboBoxItem>-->
                            </ComboBox>
                        </StackPanel>
                        <ToggleButton x:ConnectionId='10' x:Name="SerialConnectBtn"
                                                                       
                                         Content="打开从串口"
                                         Margin="10,0,0,0"
                                         Width="180"
                                         Style="{StaticResource ToggleButtonRevealStyle}"
                                         HorizontalAlignment="Left"/>
                        <!--<Button x:Name="SendMsg"
                               Content="Send"
                               Click="SendMsg_Click"
                               HorizontalAlignment="Center"
                               Margin="10"
                               Width="50"/>-->
                        <!--
                <TextBlock x:Name="testText"
                                  Text="null"
                                   HorizontalAlignment="Center"/>-->
                        <TextBlock x:ConnectionId='11' x:Name="TipText"
                                  Text=""
                                   FontSize="10"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Button x:ConnectionId='8' x:Name="ForwardBtn"
                                                          
                                  Content="向前"
                                  Width="60"
                                  Height="40"
                                  Margin="50,100,20,20"
                                  HorizontalAlignment="Center"/>
                        <Button x:ConnectionId='9' x:Name="BackwardBtn"
                                                           
                                  Content="后退"
                                  Width="60"
                                  Height="40"
                                  Margin="50,10,20,50"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Button x:ConnectionId='7' x:Name="StopBtn"
                                  Content="停止"
                                                       
                                  Width="60"
                                  Height="40"
                                  Background="DodgerBlue"
                                  Margin="10,130,50,20"
                                  HorizontalAlignment="Center"/>

                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <Grid x:ConnectionId='3' x:Name="JoyStick">
                            <Ellipse x:ConnectionId='4'   x:Name="ControllerAera"
                                            Fill="#268A9198"
                                            Height="150"
                                            Width="150"
                                            StrokeThickness="3"
                                            Stroke="DodgerBlue"
                                            Margin="20,0,0,0"/>
                            <Ellipse x:ConnectionId='5'    x:Name="Controller"
                                                                                      
                                                                                        
                                            Fill="DodgerBlue"
                                            Height="50"
                                            Width="50"
                                            StrokeThickness="3"
                                            Stroke="LightGray"
                                            Margin="20,0,0,0">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:ConnectionId='6' x:Name="JoystickTransform">
                                        
                                    </TranslateTransform>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                       

                    </StackPanel>   
                </StackPanel>
            </StackPanel>
            

            
        </RelativePanel>

    </Grid>
</Page>

